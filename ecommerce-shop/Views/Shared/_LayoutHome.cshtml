@{
    // Kiểm tra xem session có tồn tại hay không
    var isLoggedIn = Session["Username"] != null && !string.IsNullOrEmpty(Session["Username"].ToString());
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link href="~/Content/css/Style.css" rel="stylesheet" />
    <style>
        .dropdown-menu a {
            color: #a86f00 !important;
           
        }
        .custom-header {
            background-color: #f8f9fa;
            padding: 10px;
        }
         .search-bar {
            display: flex;
        }

        /* Center the logo */
        .logo-container {
            text-align: center;
        }

        /* Align right for cart and login */
        .login-container {
            text-align: right;
        }

           
    </style>
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <!-- Search Bar -->
                <div class="navbar-collapse">
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search" aria-label="Search">
                        <button class="btn btn-outline-dark" type="submit">Search</button>
                    </form>
                </div>

                <!-- Logo -->
                <a class="navbar-brand text-center" style="margin-right:200px" href="~/Home/Index">
                    <h3>coconut</h3>
                    <p>cửa hàng trẻ em số 1 đông nam á</p>
                </a>

                <!-- Cart and Customer Info -->
                <div class="navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="~/ShopingCart/BagCart"><img src="~/Content/imgs/icons8-shopping-cart-30.png" /></a>
                        </li>
                        @if (isLoggedIn)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="customerInfoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/Content/imgs/icons8-user-30.png" /><span>@Session["Username"]</span>
                                </a>
                                <div class="dropdown-menu customer-info-dropdown" aria-labelledby="customerInfoDropdown">
                                    <table>
                                        <tr>
                                            <td><a class="dropdown-item" href="~/Account/Logout">Đăng xuất</a></td>
                                        </tr>                                      
                                    </table>
                                </div>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" id="customerInfoDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <img src="~/Content/imgs/icons8-user-30.png" /><span></span>
                                </a>
                                <div class="dropdown-menu customer-info-dropdown" aria-labelledby="customerInfoDropdown">
                                    <table>
                                        <tr>
                                            <td><a class="dropdown-item" href="~/Account/Login">Đăng nhập</a></td>
                                        </tr>
                                        <tr>
                                            <td><a class="dropdown-item" href="~/Account/Register">Đăng ký</a></td>
                                        </tr>
                                    </table>
                                </div>
                            </li>

                        }

                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <nav class="navbar justify-content-center" style="background-color: #dcc0a8;background-image:url(https://www.transparenttextures.com/patterns/back-pattern.png)">
        <ul class="nav justify-content-center">
            <li class="nav-item">
                <a class="nav-link" href="~/Home"><span class="nav-text">trang chủ</span></a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Home/ThoiTrang"><span class="nav-text">thời trang</span></a>
            </li>   
            <li class="nav-item">
                <a class="nav-link" href="~/Home/HuongDan"><span class="nav-text">Giới thiệu</span></a>
            </li>
        </ul>
    </nav>
    <div class="wrapper">
        <div class="content">
            @RenderBody()
        </div>    
    </div>  
       <!-- Site footer -->
   <div class="footer">
