@{
    ViewBag.Title = "Home Page";
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewBag.Title</title>

    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>

    <!-- Custom CSS -->
    <link href="@Url.Content("~/Content/css/Style.css")" rel="stylesheet" />

    <style>
        .dropdown-menu a {
            color: #a86f00 !important;
        }

        .custom-header {
            background-color: #f8f9fa;
            padding: 10px;
        }

        .search-bar {
            display: flex;
        }

        .logo-container {
            text-align: center;
        }

        .login-container {
            text-align: right;
        }
    </style>
</head>

<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <div class="container-fluid">
                <div class="navbar-collapse">
                    <form class="d-flex">
                        <input class="form-control me-2" type="search" placeholder="Search">
                        <button class="btn btn-outline-success" type="submit">Search</button>
                    </form>
                </div>

                <!-- Logo -->
                <a class="navbar-brand text-center" style="margin-right:200px" href="@Url.Action("IndexLogin", "Home")">
                    <h3>coconut</h3>
                    <p>cửa hàng trẻ em số 1 đông nam á</p>
                </a>

                <!-- Cart and Login -->
                <div class="navbar-collapse">
                    <ul class="navbar-nav ms-auto">
                        <li class="nav-item">
                            <a class="nav-link" href="#"><img src="@Url.Content("~/Content/imgs/icons8-shopping-cart-30.png")" /></a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="customerInfoDropdown" role="button" data-bs-toggle="dropdown">
                                <img src="@Url.Content("~/Content/imgs/icons8-user-30.png")" />
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="customerInfoDropdown">
                                <li><a class="dropdown-item" href="@Url.Action("ViewProfile", "Profile")">Thông tin</a></li>
                                <li><a class="dropdown-item" href="@Url.Action("Logout", "Account")">Đăng xuất</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <nav class="navbar justify-content-center" style="background-color: #dcc0a8;background-image:url(https://www.transparenttextures.com/patterns/back-pattern.png)">
        <ul class="nav justify-content-center">
            <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">trang chủ</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("ThoiTrang", "Home")">thời trang</a></li>
            <li class="nav-item"><a class="nav-link" href="#">phụ kiện</a></li>
            <li class="nav-item"><a class="nav-link" href="@Url.Action("HuongDan", "Home")">hướng dẫn</a></li>
        </ul>
    </nav>

    <div class="wrapper">
        <div class="content">
            <div class="container" style="margin:0">
                <div class="row">
                    <div class="col">
                        <div>
                            <img alt="Web Studio" class="img-fluid" src="@Url.Content("~/Content/imgs/8776719-removebg-preview.png")" />
                        </div>
                        <div class="col">
                            <h2>Module Studio</h2>
                            <p>Whether you’re a full stack web developer, content author, or business professional – Solodev gives you the power to build, customize, and manage modules to boost your website.</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <footer class="site-footer">
        <div class="container">
            <div class="row">
                <div class="col-sm-12 col-md-6">
                    <h6>chúng tôi</h6>
                    <p><i>COCONUT</i> – tự hào là cửa hàng thời trang đẳng cấp... </p>
                    <h6>TRỤ SỞ CHÍNH</h6>
                    <p>999/9 Sao Hỏa, Vũ Trụ 23</p>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>CHI NHÁNH</h6>
                    <ul class="footer-links">
                        <li style="font-weight:bold">Tiger city :</li>
                        <li>333, Heniken, Tiger City </li>
                        <li>102, Saranghae, Tiger City </li>
                        <li>ETC ...</li>
                    </ul>
                    <br />
                    <img src="@Url.Content("~/Content/imgs/icons8-money-box-64.png")" /> <span style="font-weight:bold"> : quỹ ủng hộ trẻ em</span>
                    <p><strong>ACB:</strong> 23526277</p>
                </div>

                <div class="col-xs-6 col-md-3">
                    <h6>HỖ TRỢ KHÁCH HÀNG</h6>
                    <div class="content-footer-right">
                        <img src="@Url.Content("~/Content/imgs/icons8-phone-64.png")" /> <span style="font-size:x-large">: 0900008888</span>
                        <a class="twitter" href="#">coconut.support@ezgg.com</a>
                    </div>
                </div>
            </div>
            <hr />
        </div>

        <div class="container">
            <div class="row">
                <div class="col-md-8">
                    <p class="copyright-text">
                        &copy; 2023 All Rights Reserved by <a href="#">COCONUT</a>.
                    </p>
                </div>
                <div class="col-md-4">
                    <ul class="social-icons">
                        <li><a class="facebook" href="#"><img src="@Url.Content("~/Content/imgs/icons8-facebook-48.png")" /></a></li>
                        <li><a class="twitter" href="#"><img src="@Url.Content("~/Content/imgs/icons8-github-48.png")" /></a></li>
                        <li><a class="dribbble" href="#"><img src="@Url.Content("~/Content/imgs/icons8-instagram-48.png")" /></a></li>
                        <li><a class="linkedin" href="#"><img src="@Url.Content("~/Content/imgs/icons8-linkedin-48.png")" /></a></li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <!-- Optional JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
</body>
</html>
