    <style>
        section {
            padding: 2rem 9%
        }

        .home {
            display: flex;
            align-items: center;
            min-height: 100vh;
            background: url('images/background.jpg') no-repeat;
            background-size: cover;
            background-position: center;
        }

            .home .content {
                max-width: 50rem;
            }

                .home .content h3 {
                    font-size: 6rem;
                    color: #333;
                }

                .home .content span {
                    font-size: 3.5rem;
                    color: deeppink;
                    padding: 1rem 0;
                    line-height: 1.5;
                }

                .home .content p {
                    font: bold;
                    font-size: 1.5rem;
                    color: ghostwhite;
                    padding: 1rem 0;
                    line-height: 1.5;
                }

        .btn {
            display: inline-block;
            margin-top: 1rem;
            border-radius: 5rem;
            background: #333;
            color: #fff;
            padding: .9rem 3.5rem;
            cursor: pointer;
            font-size: 1.7rem;
        }

            .btn:hover {
                background: var(--pink);
            }
        /*Thank you*/
        .heading {
            text-align: center;
            font-size: 4rem;
            color: black;
            padding: 1rem;
            margin: 2rem 0;
            background: rgba(255, 51, 153, .05);
        }

            .heading span {
                color: hotpink;
            }

        .Thank .row {
            display: flex;
            align-items: center;
            gap: 2rem;
            flex-wrap: wrap;
            padding: 2rem 0;
            padding-bottom: 3rem;
        }

            .Thank .row .video-container {
                flex: 1 1 40rem;
                position: relative;
            }

                .Thank .row .video-container video {
                    width: 100%;
                    border: 1.5rem solid #fff;
                    border-radius: .5rem;
                    box-shadow: 0 .5rem 1rem rgba(0,0,0,.1);
                    height: 100%;
                    object-fit: cover;
                }

            .Thank .row .content {
                flex: 1 1 40rem;
            }

                .Thank .row .content h3 {
                    font-size: 3rem;
                    color: #333;
                }

                .Thank .row .content p {
                    font-size: 1.5rem;
                    color: #999;
                    padding: 5rem 0;
                    padding-top: 1rem;
                    line-height: 1.5;
                }

        /*review khach hang*/
        .review .box-container {
            display: flex;
            flex-wrap: wrap;
            gap: 1.5rem;
        }

            .review .box-container .box {
                flex: 1 1 30rem;
                box-shadow: 0 .5rem 1.5rem rgba(0, 0,0,.1);
                border-radius: .5rem;
                padding: 3rem 2rem;
                position: relative;
                border: .1rem solid rgba(0, 0,0,.1);
            }

                .review .box-container .box .fa-quote-right {
                    position: absolute;
                    bottom: 3rem;
                    right: 3rem;
                    font-size: 6rem;
                    color: #eee;
                }

                .review .box-container .box .stars i {
                    color: deeppink;
                    font-size: 2rem;
                }

                .review .box-container .box p {
                    color: #999;
                    font-size: 1.5rem;
                    line-height: 1.5;
                    padding-top: 2rem;
                }

                .review .box-container .box .user {
                    display: flex;
                    align-items: center;
                    padding-top: 2rem;
                }

                    .review .box-container .box .user img {
                        height: 6rem;
                        width: 6rem;
                        border-radius: 50%;
                        object-fit: cover;
                        margin-right: 1rem;
                    }

                    .review .box-container .box .user h3 {
                        font-size: 2rem;
                        color: #333;
                    }

                    .review .box-container .box .user span {
                        font-size: 1.5rem;
                        color: #999;
                    }
    </style>
