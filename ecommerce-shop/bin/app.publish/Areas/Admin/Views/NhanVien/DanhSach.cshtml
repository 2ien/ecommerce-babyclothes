
@{
    ViewBag.Title = "DanhSach";
    Layout = "~/Areas/Admin/Views/Shared/_layout-admin.cshtml";
}

<h2>DanhSach</h2>

a@model IEnumerable<ecommerce_shop.Models.NhanVien>
    @{
        ViewBag.Title = "Danh sách nhân viên";
        Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
    }

    <h2>Danh sách nhân viên</h2>
    <form method="get" class="mb-3">
        <input type="text" name="search" class="form-control" placeholder="Tìm theo tên hoặc username" />
        <button class="btn btn-primary mt-2">Tìm kiếm</button>
        <a href="@Url.Action("ThemMoi")" class="btn btn-success mt-2">Thêm mới</a>
        <a href="@Url.Action("Index", "HomeAdmin")" class="btn btn-secondary mt-2">Quay lại Home</a>
    </form>

    <table class="table table-bordered table-striped">
        <tr>
            <th>ID</th>
            <th>Tên nhân viên</th>
            <th>Username</th>
            <th>Thao tác</th>
        </tr>
        @foreach (var nv in Model)
        {
            <tr>
                <td>@nv.ID</td>
                <td>@nv.TenNhanVien</td>
                <td>@nv.Username</td>
                <td>
                    <a href="@Url.Action("Xoa", new { id = nv.ID })" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xoá?')">Xoá</a>
                </td>
            </tr>
        }
    </table>
