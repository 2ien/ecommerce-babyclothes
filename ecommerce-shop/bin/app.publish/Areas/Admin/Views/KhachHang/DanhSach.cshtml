@model IEnumerable<ecommerce_shop.Models.User>
@{
    ViewBag.Title = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2>Danh sách khách hàng</h2>
<form method="get" class="mb-3">
    <input type="text" name="search" class="form-control" placeholder="Tìm theo tên hoặc username" />
    <button class="btn btn-primary mt-2">Tìm kiếm</button>
    <a href="@Url.Action("ThemMoi")" class="btn btn-success mt-2">Thêm mới</a>
    <a href="@Url.Action("Index", "HomeAdmin")" class="btn btn-secondary mt-2">Quay lại Home</a>
</form>

<table class="table table-bordered table-striped">
    <tr>
        <th>ID</th>
        <th>Họ và tên</th>
        <th>Username</th>
        <th>Thao tác</th>
    </tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.ID</td>
            <td>@user.Username</td>
            <td>@user.Username</td>
            <td>
                <a href="@Url.Action("Xoa", new { id = user.ID })" class="btn btn-danger btn-sm" onclick="return confirm('Xác nhận xoá?')">Xoá</a>
            </td>
        </tr>
    }
</table>

