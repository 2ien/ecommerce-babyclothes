@{
    ViewBag.Title = "Quên mật khẩu";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-5">
            <div class="card shadow-sm">
                <div class="card-body">
                    <h3 class="text-center mb-4">Quên Mật Khẩu</h3>

                    @if (ViewBag.Error != null)
                    {
                        <div class="alert alert-danger">@ViewBag.Error</div>
                    }

                    @if (ViewBag.NewPassword != null)
                    {
                        <div class="alert alert-success">
                            <strong>Mật khẩu mới của bạn là:</strong> @ViewBag.NewPassword
                            <br />Vui lòng đăng nhập và đổi mật khẩu.
                        </div>
                    }

                    @using (Html.BeginForm("ForgotPassword", "Account", FormMethod.Post))
                    {
                        <div class="mb-3">
                            <label for="username">Tên đăng nhập</label>
                            <input type="text" name="username" class="form-control" required />
                        </div>
                        <div class="mb-3">
                            <label for="email">Email</label>
                            <input type="email" name="email" class="form-control" required />
                        </div>
                        <button type="submit" class="btn btn-primary w-100">Lấy lại mật khẩu</button>
                    }

                    <div class="text-center mt-3">
                        <a href="~/Account/Login">Quay lại đăng nhập</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

