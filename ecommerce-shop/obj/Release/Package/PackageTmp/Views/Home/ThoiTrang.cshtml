@model IEnumerable<ecommerce_shop.Models.SanPham>
@{
    ViewBag.Title = "Thời Trang";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}
<div class="container mt-4">
    <h2 class="mb-3">Sản phẩm thời trang</h2>
    <form method="get" class="mb-4">
        <input type="text" name="search" placeholder="Tìm kiếm..." class="form-control w-50 d-inline" value="@Request.QueryString["search"]" />
        <button type="submit" class="btn btn-outline-primary">Tìm</button>
    </form>
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-sm-6 col-md-4 col-lg-3 mb-4">
                <div class="card h-100">
                    <img src="@Url.Content("~/Content/imgs/" + item.HinhAnh)" class="card-img-top" />
                    <div class="card-body">
                        <h5 class="card-title">@item.TenSanPham</h5>
                        <p class="card-text">Giá: @item.GiaBan K</p>
                        <a href="@Url.Action("ChiTietSanPham", "Home", new { id = item.ID })" class="btn btn-sm btn-outline-success">Xem chi tiết</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
