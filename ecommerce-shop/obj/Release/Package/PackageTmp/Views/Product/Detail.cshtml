@model ecommerce_shop.Models.SanPham
@{
    ViewBag.Title = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_LayoutHome.cshtml";
}

<div class="container mt-5">
    <div class="row">
        <div class="col-md-5">
            <img src="@Url.Content("~/Content/imgs/" + Model.HinhAnh)" class="img-fluid" />
        </div>
        <div class="col-md-7">
            <h2>@Model.TenSanPham</h2>
            <p><strong>Giá bán:</strong> @Model.GiaBan K</p>
            <p><strong>Mô tả:</strong> @Model.ChatLieu</p>
            <button class="btn btn-primary">Thêm vào giỏ</button>
        </div>
    </div>
</div>
